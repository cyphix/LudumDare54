class_name HeartGUI
extends Panel



#===============================================================================
# Fields
#===============================================================================
#== Cached references
@onready var sprite = get_node("Sprite2D")

var _full: bool = true



#===============================================================================
# Node Methods
#===============================================================================
func _ready():
	if sprite == null:
		push_error("HeartGUI is missing a Sprite2D")



#===============================================================================
# Methods
#===============================================================================
func is_full():
	return _full

func update(full: bool):
	if full:
		sprite.frame = 0
	else:
		sprite.frame = 2
	
	_full = full



