class_name Hurtbox
extends Area2D



#===============================================================================
# Inspector Fields
#===============================================================================
@export var _damage: int = 1



#===============================================================================
# Fields
#===============================================================================
#== Cached References



#===============================================================================
# Node Methods
#===============================================================================
func _ready():
	if !body_entered.is_connected(_on_hit):
			body_entered.connect(_on_hit)



#===============================================================================
# Methods
#===============================================================================



#===============================================================================
# Internal Methods
#===============================================================================



#===============================================================================
# Events
#===============================================================================
func _on_hit(body):
	if body is Player:
		(body as Player).hurt(_damage, global_position)
