class_name Door
extends Node2D



#===============================================================================
# Inspector Fields
#===============================================================================
@export var distance_open: float = 100
@export var open_speed: float = 50



#===============================================================================
# Fields
#===============================================================================
var open: bool = false
var opening: bool = false
var distance: float = 0



#===============================================================================
# Node Methods
#===============================================================================

func _physics_process(delta):
	if open or !opening:
		return
	
	var dist: float = delta * open_speed
	
	position.y -= dist
	distance += dist
	
	if distance >= distance_open:
		open = true



#===============================================================================
# Methods
#===============================================================================



#===============================================================================
# Internal Methods
#===============================================================================



#===============================================================================
# Events
#===============================================================================
func _on_open():
	if !opening:
		opening = true
